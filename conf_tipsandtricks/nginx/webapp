server {
    server_name tips-and-tricks.eu;

    location / {
        proxy_pass http://localhost:3000;
    }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/tips-and-tricks.eu/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/tips-and-tricks.eu/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = tips-and-tricks.eu) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    server_name tips-and-tricks.eu;
    listen 80;
    return 404; # managed by Certbot


}
